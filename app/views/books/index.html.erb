<h1><b>Books</b></h1>

  <table>
    <tr><th>Title</th>
    <th>Body</th></tr>

<% @books.each do |book| %>


    <tr><td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%=link_to "Show", book_path(book),class:"show_#{book.id}"%></td>
    <td><%=link_to "Edit", edit_book_path(book) %></td>
