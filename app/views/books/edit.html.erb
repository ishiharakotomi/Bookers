<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

    <p>Title</p>
    <%= f.text_field :title,class:"book_title" %>

    <p>Body</p>
    <%= f.text_area :body,class:"book_body" %>

    <p><%= f.submit 'Update Book' %></p>

    <span><%=link_to "Show", book_path,class:"show_#{@book.id}" %></span>
    <span>|</span>
    <span><%=link_to "Back", books_path,class:"back" %></span>



<% end %>